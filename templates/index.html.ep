<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Twitch Clips Searcher</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
  <div id="app" class="container-fluid">
    <h1>Twitch Clips Searcher</h1>
    <form v-on:submit.prevent="fetch_clips" class="row row-cols-lg-auto g-3 align-items-center">
      <div class="col-12">
        <label class="visually-hidden" for="search-username">Username</label>
        <input v-model="username" type="text" id="search-username" class="form-control" placeholder="Username" name="username">
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Fetch Clips</button>
      </div>
    </form>
    <table class="table">
      <thead>
        <th scope="col">Clip</th>
        <th scope="col">Views</thj>
        <th scope="col">Category</th>
        <th scope="col">Clipper</th>
        <th scope="col">Date</th>
      </thead>
      <tbody>
        <tr v-for="clip in clips">
          <td><a v-bind:href="clip.url">{{ clip.title }}<br><img v-bind:src="clip.thumbnail_url"></a></td>
          <td>{{ clip.view_count }}</td>
          <td><a v-bind:href="'https://www.twitch.tv/directory/game/' + encodeURIComponent(clip.game)">{{ clip.game }}</a></td>
          <td><a v-bind:href="'https://www.twitch.tv/' + encodeURIComponent(clip.creator_name)">{{ clip.creator_name }}</a></td>
          <td>{{ new Date(clip.created_at).toLocaleString() }}</td>
        </tr>
      </tbody>
    </table>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/3.2.45/vue.global.min.js" integrity="sha512-Pdnl+dKWHA0jEnmhogUHlOw3FqDeujiEc3XQDkvMrPUAvytiU2cZiknw2xDPgDS+u2prg2n+6eKz3CPG588gTQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="/search.js"></script>
</body>
</html>
