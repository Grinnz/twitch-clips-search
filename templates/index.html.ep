<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Twitch Clips Searcher</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
  <div id="app" class="container-fluid">
    <h1>Twitch Clips Searcher</h1>
    <form v-on:submit.prevent="fetch_clips" class="row row-cols-lg-auto g-3 align-items-center mb-3">
      <div class="col-12">
        <label class="visually-hidden" for="search-username">Username</label>
        <div class="input-group">
          <div class="input-group-text">@</div>
          <input v-model="username" type="text" id="search-username" class="form-control" placeholder="Username" name="username">
        </div>
      </div>
      <div class="col-12">
        <label class="visually-hidden" for="search-start-date">Start Date</label>
        <div class="input-group">
          <div class="input-group-text">Start Date</div>
          <input v-model="start_date" type="datetime-local" id="search-start-date" class="form-control" placeholder="Start Date" name="start_date">
        </div>
      </div>
      <div class="col-12">
        <label class="visually-hidden" for="search-end-date">End Date</label>
        <div class="input-group">
          <div class="input-group-text">End Date</div>
          <input v-model="end_date" type="datetime-local" id="search-end-date" class="form-control" placeholder="End Date" name="end_date">
        </div>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary" v-bind:disabled="fetching_clips">Fetch Clips</button>
      </div>
      <div v-if="fetching_clips" class="col-12">
        <span class="form-text">Please wait...</span>
      </div>
      <div v-if="search_error" class="col-12">
        <span class="form-text">{{ search_error }}</span>
      </div>
    </form>
    <template v-if="clips">
      <p>Showing {{ clips_filtered.length }} of {{ clips.length }} clips fetched for <a target="_blank" v-bind:href="'https://www.twitch.tv/' + encodeURIComponent(clips_user)">{{ clips_user }}</a></p>
      <form v-on:submit.prevent class="row row-cols-lg-auto g-3 align-items-center mb-3">
        <div class="col-12">
          <label class="visually-hidden" for="filter-title">Title</label>
          <input v-model="title_search" type="text" id="filter-title" class="form-control" placeholder="Search Titles" name="title_search">
        </div>
        <div class="col-12">
          <label class="visually-hidden" for="filter-views-min">Min Views</label>
          <input v-model="views_min" type="number" id="filter-views-min" class="form-control" placeholder="Min Views" name="views_min">
        </div>
        <div class="col-12">
          <label class="visually-hidden" for="filter-views-max">Max Views</label>
          <input v-model="views_max" type="number" id="filter-views-max" class="form-control" placeholder="Max Views" name="views_max">
        </div>
        <div class="col-12">
          <select v-model="clips_filter_category" class="form-select" aria-label="Category">
            <option value="">Any Category</option>
            <option v-for="category in clip_categories" v-bind:value="category">{{ category }}</option>
          </select>
        </div>
        <div class="col-12">
          <select v-model="clips_filter_clipper" class="form-select" aria-label="Clipper">
            <option value="">Any Clipper</option>
            <option v-for="user in clip_clippers" v-bind:value="user">{{ user }}</option>
          </select>
        </div>
      </form>
      <nav v-if="page_nums.length > 1" aria-label="Clip page navigation">
        <ul class="pagination pagination-sm justify-content-center">
          <li class="page-item"><a v-on:click.prevent="if (current_page > 1) { current_page--; }" v-bind:class="pagination_prev_class" href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
          <li v-for="num in page_nums" class="page-item"><a v-on:click.prevent="current_page = num" v-bind:class="{ 'page-link': true, active: num === current_page }" href="#">{{ num }}</a></li>
          <li class="page-item"><a v-on:click.prevent="if (current_page < page_nums[page_nums.length - 1]) { current_page++; }" v-bind:class="pagination_next_class" href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
        </ul>
      </nav>
      <table class="table">
        <thead>
          <th scope="col">Clip</th>
          <th scope="col">Views</thj>
          <th scope="col">Category</th>
          <th scope="col">Clipper</th>
          <th scope="col">Date</th>
        </thead>
        <tbody>
          <tr v-for="clip in clips_page">
            <td><a target="_blank" v-bind:href="clip.url">{{ clip.title }}<br><img height=180 v-bind:src="clip.thumbnail_url"></a></td>
            <td>{{ clip.view_count }}</td>
            <td><a target="_blank" v-bind:href="'https://www.twitch.tv/directory/game/' + encodeURIComponent(clip.game)">{{ clip.game }}</a></td>
            <td><a target="_blank" v-bind:href="'https://www.twitch.tv/' + encodeURIComponent(clip.creator_name)">{{ clip.creator_name }}</a></td>
            <td>{{ new Date(clip.created_at).toLocaleString() }}</td>
          </tr>
        </tbody>
      </table>
      <nav v-if="page_nums.length > 1" aria-label="Clip page navigation">
        <ul class="pagination pagination-sm justify-content-center">
          <li class="page-item"><a v-on:click.prevent="if (current_page > 1) { current_page--; }" v-bind:class="pagination_prev_class" href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
          <li v-for="num in page_nums" class="page-item"><a v-on:click.prevent="current_page = num" v-bind:class="{ 'page-link': true, active: num === current_page }" href="#">{{ num }}</a></li>
          <li class="page-item"><a v-on:click.prevent="if (current_page < page_nums[page_nums.length - 1]) { current_page++; }" v-bind:class="pagination_next_class" href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
        </ul>
      </nav>
    </template>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/3.2.45/vue.global.min.js" integrity="sha512-Pdnl+dKWHA0jEnmhogUHlOw3FqDeujiEc3XQDkvMrPUAvytiU2cZiknw2xDPgDS+u2prg2n+6eKz3CPG588gTQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="/search.js"></script>
</body>
</html>
